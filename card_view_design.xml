<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardElevation="6dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <ImageView
            android:id="@+id/imageview1"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_baseline_assignment_24"
            android:tint="@color/pluralsightOrange"
            tools:ignore="UseAppTint" />


        <TextView
            android:id="@+id/textCourses"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="70dp"
            android:text="TextView"
            android:textColor="@color/pluralsightOrange"
            android:textSize="@dimen/course_name_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textTite"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"
            android:text="TextView"
            android:textColor="@color/pluralsightPlum"
            android:textSize="18sp"
            android:textStyle="bold" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>
